{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "State Machine Configuration",
  "type": "object",
  "properties": {
    "$schema": { "$ref": "#/definitions/schema" },
    "initialState": { "$ref": "#/definitions/initialState" },
    "states": {
      "type": "object",
      "patternProperties": {
        "^[A-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "entry": { "$ref": "#/definitions/entry" },
            "on": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "State to transition to when the event occurs."
            },
            "exit": {
              "type": "string",
              "description": "The exit action for the state."
            }
          },
          "required": ["on"],
          "additionalProperties": false
        }
      },
      "description": "The states of the state machine."
    }
  },
  "required": ["initialState", "states"],
  "additionalProperties": false,
  "definitions": {
    "schema": {
      "type": "string",
      "description": "This schema"
    },
    "entry": {
      "type": "array",
      "items": [
        {
          "type": "string",
          "description": "CSS selector"
        },
        {
          "type": "string",
          "description": "Attribute name"
        },
        {
          "oneOf": [{ "type": "boolean" }, { "type": "string" }],
          "description": "Attribute Value"
        }
      ],
      "additionalItems": false,
      "minItems": 3,
      "maxItems": 3,
      "description": "An array representing a CSS selector, an attribute, and a value"
    },
    "initialState": {
      "type": "string",
      "description": "The initial state of the state machine."
    }
  }
}
