<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="scxml.xslt"?>
<scxml js="stoplight.js">
    <state id="red" color="#FF0000">
        <transition event="timer" target="green" />
    </state>
    <state id="green" color="#00FF00">
        <transition event="timer" target="yellow" />
    </state>
    <state id="yellow" color="#FFFF00">
        <transition event="timer" target="red" />
    </state>
</scxml>