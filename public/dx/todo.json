{
  "$schema": "domx.json",
  "initialState": "init",
  "states": {
    "init": {
      "entry": [
        ["click", "#todo__btn", "submit"],
        ["trigger", "#todo__input", "focus"],
        ["state", "ready"]
      ]
    },
    "ready": {
      "submit": [
        ["attr", "#todo__input", "disabled", true],
        ["attr", "#todo__btn", "disabled", true],
        ["post", "/api/todo", ["todo", "#todo__input", "value"]],
        ["state", "processing"]
      ]
    },
    "processing": {
      "success": "server",
      "error": "server"
    }
  }
}
