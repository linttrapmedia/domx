{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "State Machine Configuration",
  "type": "object",
  "properties": {
    "$schema": { "$ref": "#/definitions/schema" },
    "initialState": { "$ref": "#/definitions/initialState" },
    "init": { "$ref": "#/definitions/event" },
    "states": {
      "type": "object",
      "patternProperties": {
        "^[A-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "entry": { "$ref": "#/definitions/event" },
            "exit": { "$ref": "#/definitions/event" }
          },
          "additionalProperties": { "$ref": "#/definitions/event" }
        }
      },
      "description": "The states of the state machine."
    }
  },
  "required": ["initialState", "states"],
  "additionalProperties": false,
  "definitions": {
    "schema": {
      "type": "string",
      "description": "This schema"
    },
    "event": {
      "type": "array",
      "oneOf": [
        {
          "type": "array",
          "items": [
            {
              "enum": ["attr"],
              "type": "string",
              "description": "Set an attribute"
            },
            {
              "type": "string",
              "description": "Element Selector"
            },
            {
              "type": "string",
              "description": "Attribute to set"
            },
            {
              "type": "string",
              "description": "Value to set"
            }
          ]
        },
        {
          "type": "array",
          "items": [
            {
              "enum": ["click"],
              "type": "string",
              "description": "Register an event on click"
            },
            {
              "type": "string",
              "description": "Element Selector"
            },
            {
              "type": "string",
              "description": "Event name"
            }
          ]
        },
        {
          "type": "array",
          "items": [
            {
              "enum": ["method"],
              "type": "string",
              "description": "Register a method call"
            },
            {
              "type": "string",
              "description": "Element Selector"
            },
            {
              "type": "string",
              "description": "Method to call"
            }
          ]
        },
        {
          "type": "array",
          "items": [
            {
              "enum": ["post"],
              "type": "string",
              "description": "Register a post call"
            },
            {
              "type": "string",
              "description": "Url to request"
            },
            {
              "type": "array",
              "description": "Method to call",
              "items": [
                {
                  "type": "string",
                  "description": "Variable name"
                },
                {
                  "type": "string",
                  "description": "Element Selector"
                },
                {
                  "enum": ["value", "formData", "dataset"],
                  "type": "string",
                  "description": "Value to select from element"
                }
              ]
            }
          ]
        }
      ],
      "additionalItems": false,
      "minItems": 3,
      "maxItems": 3,
      "description": "An array representing a CSS selector, an attribute, and a value"
    },
    "initialState": {
      "type": "string",
      "description": "The initial state of the state machine."
    }
  }
}
